<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

    </ListView>

    <EditText
        android:id="@+id/tracknumber_edit"
        android:layout_width="205dp"
        android:layout_height="39dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/trackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="TRACK"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tracknumber_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/carrierselectbtn"
        android:layout_width="108dp"
        android:layout_height="45dp"
        android:layout_marginBottom="120dp"
        android:lines="1"
        android:text="CARRIER"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toStartOf="@+id/tracknumber_edit"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <LinearLayout
        android:id="@+id/listView2"
        android:layout_width="409dp"
        android:layout_height="116dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/border2">

        <TextView
            android:id="@+id/status_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="STATUS"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border1"/>
        <TextView
            android:id="@+id/from_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="  FROM"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:background="@drawable/border1"/>
        <TextView
            android:id="@+id/to_View"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="  TO"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:background="@drawable/border1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>